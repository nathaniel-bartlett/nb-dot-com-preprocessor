{
  "extends": "airbnb-base/legacy",
  "env": {
    "amd": true,
    "es6": true
  },
  "globals": {
    "log": true
  },
  "parserOptions": { 
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [ 2, 4, {"SwitchCase": 1 } ], 
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "function-paren-newline": "off",
    "padded-blocks": "off",
    "func-names": "off",
    "max-len": [ "error", 260 ],
    "no-trailing-spaces": ["error", {"skipBlankLines": true}],
    "no-console": "off",
    "quotes": [ 2, "single", { "avoidEscape": true }]
  }
}